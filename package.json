{
  "name": "lesslog",
  "version": "0.2.7",
  "description": "Zero-dependency, teeny-tiny and serverless-ready logging utility for Node.js.",
  "author": "Robert Da Silva <mail@robdasilva.com> (https://robdasilva.com)",
  "homepage": "https://github.com/robdasilva/lesslog#readme",
  "license": "MIT",
  "keywords": [
    "aws",
    "cloudwatch",
    "debug",
    "debugger",
    "lambda",
    "log",
    "logger",
    "logless",
    "metrics",
    "monitoring",
    "serverless"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && pnpm run format index.d.ts index.js",
    "format": "prettier --write",
    "format:all": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --ext .js,.ts --fix --ignore-path .gitignore",
    "lint:all": "pnpm run lint .",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore",
    "prepare": "lefthook install && pnpm run preversion && pnpm run build",
    "preversion": "pnpm run lint:all && pnpm run test:all",
    "postversion": "git push && git push --tags",
    "test": "jest --bail --find-related-tests",
    "test:all": "jest --pass-with-no-tests",
    "test:ci": "jest --ci --coverage --pass-with-no-tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robdasilva/lesslog.git"
  },
  "bugs": {
    "url": "https://github.com/robdasilva/lesslog/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.15.5+sha256.4b4efa12490e5055d59b9b9fc9438b7d581a6b7af3b5675eb5c5f447cee1a589",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.5.1",
    "lefthook": "^1.6.7",
    "prettier": "^3.2.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
